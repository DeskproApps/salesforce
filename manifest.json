{
  "name": "@deskpro-apps/salesforce",
  "title": "Salesforce",
  "description": "View and manage associated Salesforce Contacts, Leads, Accounts and Opportunities",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/salesforce",
  "version": "1.0.51",
  "scope": "agent",
  "isSingleInstall": true,
  "hasDevMode": true,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "secrets": "",
  "repository": {
    "type": "github",
    "url": "https://github.com/DeskproApps/salesforce"
  },
  "targets": [
    {
      "target": "user_sidebar",
      "entrypoint": "#/user"
    },
    {
      "target": "organisation_sidebar",
      "entrypoint": "#/organization"
    }
  ],
  "settings": {
    "use_deskpro_saas": {
      "title": "One-Click Installation",
      "type": "boolean",
      "default": true,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 5
    },
    "client_key": {
      "title": "Client Key",
      "description": "Client key can be obtained by following our setup guide",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_deskpro_saas != true",
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "description": "Client secret can be obtained by following our setup guide",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 20
    },
    "salesforce_instance_url": {
      "title": "Salesforce Instance URL",
      "description": "E.g. https://MyDomainName.my.salesforce.com",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 30
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/callback",
        "height": "50px"
      },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 40
    },
    "global_access_token": {
      "title": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/global-sign-in",
        "height": "120px"
      },
      "isRequired": true,
      "isBackendOnly": true,
      "order": 50
    },
    "mapping_contact": {
      "title": "Contact Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/contact",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 60
    },
    "mapping_lead": {
      "title": "Lead Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/lead",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 70
    },
    "mapping_account": {
      "title": "Account Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/account",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 80
    },
    "mapping_note": {
      "title": "Note Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/note",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 90
    },
    "mapping_opportunity": {
      "title": "Opportunity Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/opportunity",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 100
    },
    "mapping_task": {
      "title": "Task Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/task",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 110
    },
    "mapping_event": {
      "title": "Event Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/event",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 120
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://(.*).salesforce.com/services/.*",
        "methods": [
          "GET",
          "POST",
          "PUT",
          "DELETE",
          "PATCH"
        ],
        "timeout": 30
      }
    ]
  }
}