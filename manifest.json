{
  "name": "@deskpro-apps/salesforce",
  "title": "Salesforce",
  "description": "View and manage associated Salesforce Contacts, Leads, Accounts and Opportunities",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/salesforce",
  "version": "1.0.45",
  "scope": "agent",
  "isSingleInstall": true,
  "hasDevMode": true,
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "repository": {
    "type": "github",
    "url": "https://github.com/DeskproApps/salesforce"
  },
  "targets": [
    { "target": "user_sidebar", "entrypoint": "#/user" },
    { "target": "organisation_sidebar", "entrypoint": "#/organization" }
  ],
  "settings": {
    "client_key": {
      "title": "Client Key",
      "description": "Client key can be obtained by following our setup guide",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "description": "Client secret can be obtained by following our setup guide",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "salesforce_instance_url": {
      "title": "Salesforce Instance URL",
      "description": "E.g. https://MyDomainName.my.salesforce.com",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 30
    },
    "default_comment_on_ticket_reply": {
      "title": "Ticket reply as comment",
      "description": "Enable option to add Deskpro replies as task comments when a Space issue is linked to a Deskpro ticket",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 40
    },
    "default_comment_on_ticket_note": {
      "title": "Ticket note as comment",
      "description": "Enable option to add Deskpro notes as task comments when a Space issue is linked to a Deskpro ticket",
      "type": "boolean",
      "isRequired": false,
      "isBackendOnly": false,
      "order": 50
    },
    "global_access_token": {
      "title": "",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/global-sign-in" },
      "isRequired": true,
      "isBackendOnly": true,
      "order": 60
    },
    "mapping_contact": {
      "title": "Contact Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/contact",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 70
    },
    "mapping_lead": {
      "title": "Lead Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/lead",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 80
    },
    "mapping_account": {
      "title": "Account Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/account",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 90
    },
    "mapping_note": {
      "title": "Note Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/note",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 100
    },
    "mapping_opportunity": {
      "title": "Opportunity Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/opportunity",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 110
    },
    "mapping_task": {
      "title": "Task Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/task",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 120
    },
    "mapping_event": {
      "title": "Event Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/event",
        "label": "Edit Mapping",
        "icon": "edit",
        "height": 500
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 130
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://(.*).salesforce.com/services/.*",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
        "timeout": 30
      }
    ]
  }
}
