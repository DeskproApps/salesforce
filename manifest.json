{
  "name": "@deskpro-apps/salesforce",
  "title": "Salesforce",
  "description": "View and manage associated Salesforce Contacts, Leads, Accounts and Opportunities",
  "version": "1.0.2",
  "scope": "agent",
  "isSingleInstall": true,
  "hasDevMode": true,
  "targets": [{
    "target": "user_sidebar",
    "entrypoint": "#/user"
  }, {
    "target": "organisation_sidebar",
    "entrypoint": "#/organization"
  }],
  "settings": {
    "client_key": {
      "title": "Client Key",
      "description": "Client key can be obtained by following our setup guide",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "description": "Client secret can be obtained by following our setup guide",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "salesforce_instance_url": {
      "title": "Salesforce Instance URL",
      "description": "E.g. https://MyDomainName.my.salesforce.com",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 30
    },
    "global_access_token": {
      "title": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/global-sign-in"
      },
      "isRequired": true,
      "isBackendOnly": true,
      "order": 40
    },
    "mapping_contact": {
      "title": "Contact Field Mapping",
      "type": "app_modal",
      "options": {
        "entrypoint": "#/admin/mapping/contact",
        "label": "Edit Mapping",
        "icon": "edit"
      },
      "isRequired": false,
      "isBackendOnly": false,
      "order": 50
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://(.*).salesforce.com/services/.*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
      "timeout": 30
    }]
  }
}